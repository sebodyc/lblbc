{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!
{% endblock %}

{% block body %}
    <div class="d-flex flex-column justify-content-center align-items-center" style="height:90vh;">

        <h1>l'aubergine</h1>

        <p class="lead">Admin Connection</p>


        <form action="" method="post">
            <div class="form-group"><input type="email" placeholder="adresse email" name="_username"></div>
            <div class="form-group"><input type="password" placeholder="password" name="_password"></div>
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <a href="{{ path('security_logout') }}" class="btn btn-danger">Deconnexion</a>
            {% else %}
            <button type="submit" class="btn btn-primary">connexion</button>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                <a type="button" href="{{ path('admin_console') }}" class="btn btn-primary">Admin</a>
            {% endif %}
        </form>
    </div>
{% endblock %}
